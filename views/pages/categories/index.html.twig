{% extends "layout.html.twig" %}
{% block content %}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>Categorías</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1>Listado de Categorías</h1>
        <a href="/categories/create" class="btn btn-primary mb-3">Agregar nueva categoría</a>

        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Color Ícono</th>
                    <th>Ícono</th>
                    <th>Activo</th>
                    <th>Creado</th>
                    <th>Actualizado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>
                            {% if category.icon_color %}
                                <span class="badge" style="background-color: {{ category.icon_color }};">
                                    {{ category.icon_color }}
                                </span>
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td>{{ category.icon ?: '-' }}</td>
                        <td>
                            {% if category.active %}
                                <span class="badge bg-success">Sí</span>
                            {% else %}
                                <span class="badge bg-secondary">No</span>
                            {% endif %}
                        </td>
                        <td>{{ category.created_at|date("Y-m-d H:i") }}</td>
                        <td>{{ category.updated_at|date("Y-m-d H:i") }}</td>
                        <td>
                            <a href="/categories/{{ category.id }}/edit" class="btn btn-sm btn-warning">Editar</a>
                            <a href="/categories/{{ category.id }}/delete" class="btn btn-sm btn-danger"
                               onclick="return confirm('¿Eliminar esta categoría?')">Eliminar</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">No hay categorías registradas.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

{% endblock %}