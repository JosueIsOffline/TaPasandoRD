{% extends "layout.html.twig" %}

{% block content %}
{% if message %}
    <div id="toast-message" class="toast-message">
      {{ message }}
    </div>
  {% endif %}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>Editar Barrio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>

    <div class="container-fluid p-4">
    <div class="row mb-4">
      <div class="col-12">
        <h1 class="mb-0">Editar Barrio</h1>
        <p class="text-muted">Editar un Barrio en el sistema</p>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-8">
        <div class="card incident-card">
          <div class="card-header bg-white">
            <h5 class="mb-0">Información del Barrio</h5>
          </div>
        {% if error is defined %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}
        <div class="card-body">
            <form action="/neighborhoods/{{ neighborhood.id }}/update" method="post">
                <div class="row">
                    <div class="col-md-6">
                    <div class="mb-3">
                    <label for="name" class="form-label">Nombre <span class="text-danger">*</span></label>
                    <input value="{{neighborhood.name}}" type="text" class="form-control" id="name" name="name" value="{{ old.name ?? '' }}"  required >
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                     <label for="municipality_id" class="form-label">Municipio <span class="text-danger">*</span></label>
                <select class="form-select" id="municipality_id" name="municipality_id" required>
                    <option value="">-- Seleccionar Municipio --</option>
                    {% for municipality in municipalities %}
                        <option value="{{ municipality.id }}"
                            {% if neighborhood.municipality_id == municipality.id %}selected{% endif %}
                        >
                            {{ municipality.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
        </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success btn-lg">
                  <i class="fas fa-save me-2"></i>
                  Guardar Barrio
                </button>
                <a href="/neighborhoods" class="btn btn-secondary btn-lg">
                  <i class="fas fa-arrow-left me-2"></i>
                  Volver al Listado
                </a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

      <div class="col-lg-4 padding-3>
        <div class="card incident-card mt-4">
          <div class="card-header bg-white">
            <h5 class="mb-0">Información</h5>
          </div>
          <div class="card-body">
            <div class="alert alert-info">
              <i class="fas fa-info-circle me-2"></i>
              Aquí puedes Editar un Barrio existente en el sistema.
            </div>
            <div class="alert alert-warning">
              <i class="fas fa-exclamation-triangle me-2"></i>
              Verifica que el código del Barrio sea único.
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

      

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
{% endblock %}

{% block scripts %}
{{parent()}}
  {% if message %}
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        var toast = document.getElementById('toast-message');
        if (toast) {
          toast.classList.add('show');
          setTimeout(function() {
            toast.classList.remove('show');
          }, 3000);
        }
      });
    </script>
  {% endif %}
{% endblock %}