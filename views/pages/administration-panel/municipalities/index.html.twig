{% extends "layout.html.twig" %}
{% block content %}


<body>
    <div class="container mt-4">
        <h1>Listado de Municipios</h1>
        <a href="/municipalities/create" class="btn btn-primary mb-3">Agregar nuevo municipio</a>

        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Código</th>
                    <th>Provincia</th>
                    <th>Creado</th>
                    <th>Actualizado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for municipality in municipalities %}
                    <tr>
                        <td>{{ municipality.id }}</td>
                        <td>{{ municipality.name }}</td>
                        <td>{{ municipality.code ?: '-' }}</td>
                        <td>{{ municipality.province_name }}</td>
                        <td>{{ municipality.created_at|date("Y-m-d H:i") }}</td>
                        <td>{{ municipality.updated_at|date("Y-m-d H:i") }}</td>
                        <td>
                            <a href="/municipalities/{{ municipality.id }}/edit" class="btn btn-sm btn-warning">Editar</a>
                            <a href="/municipalities/{{ municipality.id }}/delete" class="btn btn-sm btn-danger"
                               onclick="return confirm('¿Eliminar este municipio?')">Eliminar</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center">No hay municipios registrados.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
{% endblock %}