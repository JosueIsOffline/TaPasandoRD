{% extends "layout.html.twig" %}
{% block content %}

<body>
    <div class="container mt-4">
        <h1>Editar Municipio</h1>

        {% if error is defined %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}

        <form action="/municipalities/{{ municipality.id }}/update" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Nombre <span class="text-danger">*</span></label>
                <input 
                    type="text" 
                    class="form-control" 
                    id="name" 
                    name="name" 
                    value="{{ municipality.name }}" 
                    required
                >
            </div>

            <div class="mb-3">
                <label for="code" class="form-label">CÃ³digo</label>
                <input 
                    type="text" 
                    class="form-control" 
                    id="code" 
                    name="code" 
                    value="{{ municipality.code }}"
                >
            </div>

            <div class="mb-3">
                <label for="province_id" class="form-label">Provincia <span class="text-danger">*</span></label>
                <select class="form-select" id="province_id" name="province_id" required>
                    <option value="">-- Seleccionar Provincia --</option>
                    {% for province in provinces %}
                        <option value="{{ province.id }}"
                            {% if municipality.province_id == province.id %}selected{% endif %}
                        >
                            {{ province.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Actualizar</button>
            <a href="/municipalities" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
{% endblock %}
