{% extends "layout.html.twig" %}
{% block content %}

<body>
    <div class="container mt-4">
        <h1>Listado de Provincias</h1>
        <a href="/provinces/create" class="btn btn-primary mb-3">Agregar nueva provincia</a>

        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Código</th>
                    <th>Creado</th>
                    <th>Actualizado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for province in provinces %}
                    <tr>
                        <td>{{ province.id }}</td>
                        <td>{{ province.name }}</td>
                        <td>{{ province.code }}</td>
                        <td>{{ province.created_at|date("Y-m-d H:i") }}</td>
                        <td>{{ province.updated_at|date("Y-m-d H:i") }}</td>
                        <td>
                            <a href="/provinces/{{ province.id }}/edit" class="btn btn-sm btn-warning">Editar</a>
                            <a href="/provinces/{{ province.id }}/delete" class="btn btn-sm btn-danger"
                               onclick="return confirm('¿Eliminar esta provincia?')">Eliminar</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">No hay provincias registradas.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

</body>
</html>
{% endblock %}
