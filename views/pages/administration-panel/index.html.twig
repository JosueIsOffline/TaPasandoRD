{% extends 'layout.html.twig' %}


{%block body_class%}
  validation-report-body
{% endblock %}
{% block content %}
<div class="background-canvas" aria-hidden="true"></div>
<div class="row mb-4">
    <!-- Provincias -->
    <div class="col-md-3">
        <a href="/provinces" class="text-decoration-none">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="fas fa-map fa-2x text-primary mb-2"></i>
                    <h5 class="card-title">Provincias</h5>
                    <h3 class="fw-bold">{{ provinces|length }}</h3>
                </div>
            </div>
        </a>
    </div>

    <!-- Municipios -->
    <div class="col-md-3">
        <a href="/municipalities" class="text-decoration-none">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="fas fa-building fa-2x text-success mb-2"></i>
                    <h5 class="card-title">Municipios</h5>
                    <h3 class="fw-bold">{{ municipalities|length }}</h3>
                </div>
            </div>
        </a>
    </div>

    <!-- Barrios -->
    <div class="col-md-3">
        <a href="/neighborhoods" class="text-decoration-none">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="fas fa-home fa-2x text-warning mb-2"></i>
                    <h5 class="card-title">Barrios</h5>
                    <h3 class="fw-bold">{{ neighborhoods|length }}</h3>
                </div>
            </div>
        </a>
    </div>

    <!-- Tipos de Incidencias -->
    <div class="col-md-3">
        <a href="/categories" class="text-decoration-none">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-triangle fa-2x text-danger mb-2"></i>
                    <h5 class="card-title">Incidencias</h5>
                    <h3 class="fw-bold">{{ categories|length }}</h3>
                </div>
            </div>
        </a>
    </div>
</div>

{% endblock %}
