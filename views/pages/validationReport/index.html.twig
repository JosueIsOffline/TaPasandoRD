{% extends "layout.html.twig" %}

{% block content %}
<div class="container-fluid p-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-0">Reporte de Validación</h1>
            <p class="text-muted">Panel de control y estadísticas del sistema de validación</p>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Bienvenido al Reporte de Validación</h5>
                </div>
                <div class="card-body">
                    <p>Aquí se mostrarán futuras estadísticas y gráficos del sistema de validación.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Reports -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-clock text-warning me-2"></i>
                        Reportes Pendientes de Validación
                    </h5>
                </div>
                <div class="card-body">
                    {% if pendingIncidents and pendingIncidents|length > 0 %}
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Fecha</th>
                                        <th>Título</th>
                                        <th>Tipo</th>
                                        <th>Ubicación</th>
                                        <th>Reportero</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for incident in pendingIncidents %}
                                        <tr>
                                            <td>
                                                <small>{{ incident.occurrence_date|date('d/m/Y') }}</small><br>
                                                <small class="text-muted">{{ incident.occurrence_date|date('H:i') }}</small>
                                            </td>
                                            <td>{{ incident.title }}</td>
                                            <td>
                                                <span class="badge" style="background-color: {{ incident.category_color }} !important; color: white;">
                                                    {{ incident.category_name }}
                                                </span>
                                            </td>
                                            <td>
                                                <small>{{ incident.municipality_name ?? 'N/A' }}</small><br>
                                                <small class="text-muted">{{ incident.province_name ?? 'N/A' }}</small>
                                            </td>
                                            <td>
                                                <small>{{ incident.reporter_email }}</small><br>
                                                <small class="text-muted">{{ roles[incident.reporter_role] }}</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-clock me-1"></i>Pendiente
                                                </span>
                                            </td>
                                            <td>
                                                <button class="btn btn-outline-primary btn-sm me-1" data-bs-toggle="modal" data-bs-target="#validateModal">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button onclick="approve({{incident.id}})" class="btn btn-outline-success btn-sm me-1">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                                <button onclick="reject({{incident.id}})" class="button btn-outline-danger btn-sm">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-check-circle text-success fa-3x mb-3"></i>
                            <h5 class="text-muted">No hay reportes pendientes</h5>
                            <p class="text-muted">Todos los incidentes han sido validados o no hay reportes en el sistema.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
  {{parent()}}
  <script>

    const approve = async (incidentId) => {
      const data = new FormData()
      data.append("incident_id", incidentId)
      data.append("comments", "Validado")
     
     console.log(incidentId)
      try {
        const res = await fetch("http://localhost:8000/api/validator/approve", {
          method: "POST",
          body: data 
        })
      } catch(e) {
       console.error("Something went wrong",e)
      }
    }

  const reject = async (incidentId) => {
   const data = new FormData()
      data.append("incident_id", incidentId)
      data.append("comments", "Rechazado")
     
     console.log(incidentId)
      try {
        const res = await fetch("http://localhost:8000/api/validator/reject", {
          method: "POST",
          body: data 
        })
      } catch(e) {
       console.error("Something went wrong",e)
      } 
  }
  </script>
{% endblock %}
