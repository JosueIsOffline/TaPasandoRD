{% extends "layout.html.twig" %}
{% block content %}


<head>
    <meta charset="UTF-8" />
    <title>Editar Provincia</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <div class="container mt-4">
        <h1>Editar Provincia</h1>

        {% if error is defined %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}

        <form action="/provinces/{{ province.id }}/update" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Nombre <span class="text-danger">*</span></label>
                <input 
                    type="text" 
                    class="form-control" 
                    id="name" 
                    name="name" 
                    value="{{ province.name }}" 
                    required
                >
            </div>

            <div class="mb-3">
                <label for="code" class="form-label">CÃ³digo</label>
                <input 
                    type="text" 
                    class="form-control" 
                    id="code" 
                    name="code" 
                    value="{{ province.code ?? '' }}" 
                    placeholder="Ej: SDE, PR-01"
                >
                <div class="form-text">Opcional. Identificador corto para la provincia.</div>
            </div>

            <button type="submit" class="btn btn-primary">Actualizar</button>
            <a href="/provinces" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
{% endblock %}